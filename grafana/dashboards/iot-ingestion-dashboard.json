{
  "id": null,
  "uid": "iot-ingestion-monitoring",
  "title": "IoT Ingestion Monitoring",
  "description": "Real-time monitoring of IoT telemetry ingestion pipeline",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "tags": ["iot", "ingestion", "monitoring"],

  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Messages/sec",
      "description": "Current ingestion throughput",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(iot_ingestion_messages_total[1m]))",
          "legendFormat": "msg/s",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "green", "value": 10 }
            ]
          }
        }
      }
    },

    {
      "id": 2,
      "type": "stat",
      "title": "Error Rate",
      "description": "Percentage of failed messages",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(iot_ingestion_messages_total{status=\"error\"}[5m])) / sum(rate(iot_ingestion_messages_total[5m])) * 100",
          "legendFormat": "error %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      }
    },

    {
      "id": 3,
      "type": "stat",
      "title": "Latency p95",
      "description": "95th percentile processing latency",
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(iot_ingestion_latency_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.5 },
              { "color": "red", "value": 2 }
            ]
          }
        }
      }
    },

    {
      "id": 4,
      "type": "stat",
      "title": "Events Created",
      "description": "Total events created",
      "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "expr": "sum(iot_events_created_total)",
          "legendFormat": "total",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null }
            ]
          }
        }
      }
    },

    {
      "id": 5,
      "type": "timeseries",
      "title": "Ingestion Throughput",
      "description": "Messages received per second over time",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(iot_ingestion_messages_total{status=\"success\"}[1m]))",
          "legendFormat": "success",
          "refId": "A"
        },
        {
          "expr": "sum(rate(iot_ingestion_messages_total{status=\"error\"}[1m]))",
          "legendFormat": "error",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "error" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "success" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          }
        ]
      }
    },

    {
      "id": 6,
      "type": "timeseries",
      "title": "Ingestion Latency",
      "description": "Processing latency percentiles",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(iot_ingestion_latency_seconds_bucket[5m])) by (le))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(iot_ingestion_latency_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(iot_ingestion_latency_seconds_bucket[5m])) by (le))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },

    {
      "id": 7,
      "type": "timeseries",
      "title": "Rules Processing",
      "description": "Rules evaluated and triggered over time",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(iot_rules_evaluated_total[1m]))",
          "legendFormat": "evaluated",
          "refId": "A"
        },
        {
          "expr": "sum(rate(iot_rules_triggered_total[1m]))",
          "legendFormat": "triggered",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "triggered" },
            "properties": [{ "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }]
          }
        ]
      }
    },

    {
      "id": 8,
      "type": "timeseries",
      "title": "Events by Severity",
      "description": "Events created grouped by severity",
      "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(iot_events_created_total[1m])) by (severity)",
          "legendFormat": "{{severity}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "critical" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "warning" },
            "properties": [{ "id": "color", "value": { "fixedColor": "yellow", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "info" },
            "properties": [{ "id": "color", "value": { "fixedColor": "blue", "mode": "fixed" } }]
          }
        ]
      }
    },

    {
      "id": 9,
      "type": "table",
      "title": "Error Breakdown",
      "description": "Errors by type",
      "gridPos": { "x": 0, "y": 20, "w": 24, "h": 6 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "expr": "sum(iot_ingestion_errors_total) by (source, error_type)",
          "legendFormat": "{{source}} - {{error_type}}",
          "refId": "A",
          "format": "table",
          "instant": true
        }
      ]
    }
  ]
}
