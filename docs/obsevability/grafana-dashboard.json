{
  "title": "App Observability (Dev)",
  "schemaVersion": 38,
  "version": 1,
  "panels": [
    {
      "id": 1,
      "title": "Request rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(http_requests_total[1m])",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "title": "Error rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(http_requests_total{status=~\"5..\"}[1m])",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "title": "Request latency",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[1m]))",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "title": "DB connections",
      "type": "timeseries",
      "targets": [
        {
          "expr": "django_db_connections",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "title": "Celery backlog",
      "type": "timeseries",
      "targets": [
        {
          "expr": "celery_queue_length",
          "refId": "A"
        }
      ]
    }
  ]
}
