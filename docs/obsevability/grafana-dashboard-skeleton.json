{

  "id": null,
  "uid": "observability-skeleton",
  "title": "Observability - skeleton dashboards",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",

  "panels": [
    {
      "type": "timeseries",
      "title": "Request rate (RPS)",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 6 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(django_http_requests_total_by_method_total[1m]))",
          "legendFormat": "requests/sec",
          "refId": "A"
        }
      ]
    },

    {
      "type": "timeseries",
      "title": "Error rate (5xx)",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 6 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(django_http_responses_total_by_status_total{status=~\"5..\"}[1m]))",
          "legendFormat": "errors/sec",
          "refId": "A"
        }
      ]
    },

    {
      "type": "timeseries",
      "title": "Error rate (4xx)",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 6 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(django_http_responses_total_by_status_total{status=~\"4..\"}[1m]))",
          "legendFormat": "errors/sec",
          "refId": "A"
        }
      ]
    },



    {
      "type": "timeseries",
      "title": "Request latency p95",
      "gridPos": { "x": 0, "y": 6, "w": 12, "h": 6 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(django_http_requests_latency_including_middlewares_seconds_bucket[1m])) by (le))",
          "legendFormat": "p95 latency",
          "refId": "A"
        }
      ]
    },


    {
      "type": "timeseries",
      "title": "Celery backlog (queue length)",
      "gridPos": { "x": 0, "y": 12, "w": 24, "h": 6 },
      "datasource": { "type": "prometheus" },
      "targets": [
        {
          "expr": "celery_queue_length",
          "legendFormat": "{{queue_name}} backlog",
          "refId": "A"
        }
      ]
    }
  ]
}
